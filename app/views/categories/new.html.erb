<h1 class="text-center mt-4">Create new category</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do | f | %>
        <div class="form-group row mb-2">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name of the category" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg col-4", data: {turbo: false} %>
        </div>
      <% end %>
    </div>
    <div class="justify-content-center">
      <%= link_to '[Return to listing]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>
