<h1>Create new article</h1>

<%= if @mArticle.errors.any? then %>
  <h2>Following error prevented the article from being saved</h2>
  <ul>
    <%= @mArticle.errors.full_messages.each do | msg | %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true do | f | %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
