<h1>Create new article</h1>

<%= form_with scope: :article, url: articles_path, local: true do | f | %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
