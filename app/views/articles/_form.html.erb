<div class="container">
  <% if @mArticle.errors.any? %>
    <h2>Following errors prevented the article from being saved</h2>
    <ul>
      <% @mArticle.errors.full_messages.each do | msg | %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @mArticle, class: "shadow p-3 mb-3 bg-info rounded", local: true) do | f | %>
        <div class="form-group row">
          <%= f.label "Title", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "Description", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :description, class: "form-control shadow rounded", placeholder: "Descrption" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "Body", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :body, rows: 6, class: "form-control shadow rounded", placeholder: "Body" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[Return to listing]', articles_path, class: "text-info" %>
  </div>
</div>
