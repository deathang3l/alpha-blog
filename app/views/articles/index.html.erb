<h1>This is articles index file</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @mArticles.each do | article | %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= button_to 'Edit', article_path(article), 'data-turbo-method': :patch %></td>
      <td><%= button_to 'Delete', article_path(article), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
